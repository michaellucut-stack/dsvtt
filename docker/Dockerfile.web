# =============================================================================
# DSVTT Web — Multi-stage Docker build
# =============================================================================

# ---------------------------------------------------------------------------
# Stage 1: Build
# ---------------------------------------------------------------------------
FROM node:20-alpine3.21 AS builder

RUN corepack enable && corepack prepare pnpm@9.15.4 --activate

WORKDIR /app

# Copy workspace configuration first for better layer caching
COPY pnpm-workspace.yaml pnpm-lock.yaml package.json tsconfig.base.json turbo.json ./
COPY apps/web/package.json apps/web/
COPY packages/shared/package.json packages/shared/
COPY packages/events/package.json packages/events/
COPY packages/ui/package.json packages/ui/
COPY packages/auth/package.json packages/auth/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source files
COPY packages/shared/ packages/shared/
COPY packages/events/ packages/events/
COPY packages/ui/ packages/ui/
COPY packages/auth/ packages/auth/
COPY apps/web/ apps/web/

# Build shared packages first, then the web app
RUN pnpm --filter @dsvtt/shared build && \
    pnpm --filter @dsvtt/events build && \
    pnpm --filter @dsvtt/ui build && \
    pnpm --filter @dsvtt/web build

# ---------------------------------------------------------------------------
# Stage 2: Production
# ---------------------------------------------------------------------------
FROM node:20-alpine3.21 AS runner

LABEL org.opencontainers.image.source="https://github.com/vttforge/dsvtt"
LABEL org.opencontainers.image.description="DSVTT Web — Next.js Frontend"
LABEL org.opencontainers.image.licenses="MIT"
LABEL org.opencontainers.image.vendor="VTT Forge"

# Upgrade Alpine packages for latest security patches
RUN apk --no-cache upgrade

RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

WORKDIR /app

ENV NODE_ENV=production

# Copy the standalone Next.js build output
COPY --from=builder /app/apps/web/.next/standalone ./
COPY --from=builder /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder /app/apps/web/public ./apps/web/public

# Remove unnecessary files from the production image
RUN rm -rf .npmrc .git README.md LICENSE \
    && find . -name ".npmrc" -delete 2>/dev/null || true \
    && find . -name "README.md" -delete 2>/dev/null || true \
    && find . -name "CHANGELOG.md" -delete 2>/dev/null || true \
    && find . -name ".git" -type d -exec rm -rf {} + 2>/dev/null || true

USER nextjs

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
    CMD wget -q --spider http://localhost:3000 || exit 1

CMD ["node", "apps/web/server.js"]
